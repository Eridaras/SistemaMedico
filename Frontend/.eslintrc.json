{
    "extends": [
        "next/core-web-vitals",
        "next/typescript",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "warn",
        "no-console": [
            "warn",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        "@typescript-eslint/no-explicit-any": "warn",
        "react/jsx-curly-brace-presence": [
            "warn",
            {
                "props": "never",
                "children": "never"
            }
        ],
        "react/self-closing-comp": "warn",
        "import/order": [
            "warn",
            {
                "groups": [
                    "builtin",
                    "external",
                    "internal",
                    "parent",
                    "sibling",
                    "index"
                ],
                "newlines-between": "always",
                "alphabetize": {
                    "order": "asc",
                    "caseInsensitive": true
                }
            }
        ]
    },
    "ignorePatterns": [
        "node_modules/",
        ".next/",
        "out/",
        "public/",
        "*.config.js",
        "*.config.ts"
    ]
}